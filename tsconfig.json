{
    "compilerOptions": {
      "experimentalDecorators": true,
      "target": "es2017",
      "module": "commonjs",
      "rootDir": "src",
      "outDir": "dist",
      "sourceMap": true,
      "resolveJsonModule": true,
      "lib": ["es2017", "dom", "ES2021.String"],
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }